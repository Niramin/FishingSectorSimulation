<Window x:Class="FishingSectorSimulation.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FishingSectorSimulation.View"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="496" Width="800">
    <Grid Background="#FF595656">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid  Grid.Column="0">
                <lvc:CartesianChart Series="{Binding FishPopulationSeries}" LegendLocation="Right" Margin="20">
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Bluefin Tuna Population" LabelFormatter="{Binding YFormatter}" ></lvc:Axis>
                    </lvc:CartesianChart.AxisY>
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Month" Labels="{Binding Months}"></lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                </lvc:CartesianChart>

            </Grid>
            
            <Grid  Grid.Column="1">
                <lvc:CartesianChart Series="{Binding FisherIncomeSeries}" LegendLocation="Right" Margin="20">
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Fisher Income from Bluefin Tuna" LabelFormatter="{Binding YFormatter}"></lvc:Axis>
                    </lvc:CartesianChart.AxisY>
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Month" Labels="{Binding Months}"></lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                </lvc:CartesianChart>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Margin="10" Background="#FFF2EFEF" VerticalAlignment="Center">
                    <Button Content="Start Simulation" Padding="5,0,5,0" Command="{Binding StartSimulation}" x:Name="startbtn"></Button>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Grid>
</Window>
